{
  "name": "typingpro-monorepo",
  "private": true,
  "version": "1.2.21",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=@typingpro/desktop",
    "build": "node scripts/check-env.cjs && npm run build --workspace=@typingpro/desktop",
    "tauri": "npm run tauri --workspace=@typingpro/desktop",
    "release:patch": "npm version patch --no-git-tag-version && node scripts/sync-tauri-version.cjs",
    "release:minor": "npm version minor --no-git-tag-version && node scripts/sync-tauri-version.cjs",
    "release:major": "npm version major --no-git-tag-version && node scripts/sync-tauri-version.cjs",
    "lint:css": "stylelint \"src/**/*.css\" \"apps/**/*.css\""
  },
  "devDependencies": {
    "@types/howler": "^2.2.12",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "stylelint": "^16.26.1",
    "stylelint-config-standard": "^39.0.1",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@tauri-apps/plugin-global-shortcut": "^2.3.1",
    "@tauri-apps/plugin-process": "^2.3.1",
    "@tauri-apps/plugin-store": "^2.4.1",
    "@tauri-apps/plugin-updater": "^2.9.0",
    "firebase": "^12.7.0",
    "howler": "^2.2.4",
    "html2canvas": "^1.4.1",
    "use-sound": "^5.0.0"
  }
}
