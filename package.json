{
  "name": "typingpro-monorepo",
  "private": true,
  "version": "1.2.55",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=@typingpro/desktop",
    "build": "node scripts/check-env.cjs && npm run build --workspace=@typingpro/desktop",
    "tauri": "npm run tauri --workspace=@typingpro/desktop",
    "build:mac": "export $(grep -v '^#' apps/desktop/.env | xargs) && npm run build --workspace=@typingpro/desktop && npm run tauri --workspace=@typingpro/desktop -- build",
    "release:patch": "npm version patch --no-git-tag-version && node scripts/sync-tauri-version.cjs",
    "release:minor": "npm version minor --no-git-tag-version && node scripts/sync-tauri-version.cjs",
    "release:major": "npm version major --no-git-tag-version && node scripts/sync-tauri-version.cjs",
    "verify:glass": "node scripts/verify-glass.js",
    "test": "npm run test --workspaces --if-present",
    "lint": "eslint . --ext ts,tsx && npm run lint:css"
  },
  "devDependencies": {
    "@types/howler": "^2.2.12",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "autoprefixer": "^10.4.23",
    "eslint": "^8.0.0",
    "postcss": "^8.5.6",
    "prettier": "^3.0.0",
    "stylelint": "^16.26.1",
    "stylelint-config-standard": "^39.0.1",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@tauri-apps/plugin-global-shortcut": "^2.3.1",
    "@tauri-apps/plugin-process": "^2.3.1",
    "@tauri-apps/plugin-store": "^2.4.1",
    "@tauri-apps/plugin-updater": "^2.9.0",
    "@types/recharts": "^1.8.29",
    "firebase": "^12.7.0",
    "framer-motion": "^12.26.1",
    "howler": "^2.2.4",
    "html2canvas": "^1.4.1",
    "lucide-react": "^0.562.0",
    "react-router-dom": "^7.12.0",
    "recharts": "^3.6.0",
    "use-sound": "^5.0.0"
  }
}
