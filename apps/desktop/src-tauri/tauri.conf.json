{
  "productName": "TypingPro",
  "version": "1.2.32",
  "identifier": "com.typingpro.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "main",
        "title": "TypingPro",
        "url": "index.html",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "transparent": true,
        "decorations": true,
        "titleBarStyle": "Overlay",
        "devtools": true
      },
      {
        "label": "zen",
        "title": "TypingPro Zen",
        "url": "zen.html",
        "width": 700,
        "height": 250,
        "resizable": false,
        "fullscreen": false,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "visible": false,
        "center": true,
        "focus": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-eval' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; media-src 'self' asset: https://asset.localhost data: blob: filesystem:; img-src 'self' asset: https://asset.localhost data: blob: filesystem: https://lh3.googleusercontent.com https://avatars.githubusercontent.com; connect-src 'self' https://* wss://* http://localhost:* ws://localhost:* https://api.github.com https://firestore.googleapis.com https://identitytoolkit.googleapis.com https://securetoken.googleapis.com;"
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "dmg",
      "nsis",
      "appimage"
    ],
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "entitlements": "Entitlements.plist",
      "signingIdentity": null,
      "dmg": {
        "background": "./icons/dmg-background.png",
        "windowSize": {
          "width": 600,
          "height": 400
        },
        "appPosition": {
          "x": 160,
          "y": 210
        },
        "applicationFolderPosition": {
          "x": 440,
          "y": 210
        }
      }
    },
    "resources": [
      "assets/sounds/*"
    ]
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "deep-link": {
      "schemes": [
        "typingpro"
      ]
    },
    "updater": {
      "endpoints": [
        "https://github.com/DeepEyeCrypto/TypingPro/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEExOEJBNjBEQUY5OEYwRUIKUldUcjhKaXZEYWFMb1had29SQTZibWtoTjN2cmJ6Z2xsczIwZlFLajFkN2VTRlE0RkpPK3V2clcK"
    }
  }
}